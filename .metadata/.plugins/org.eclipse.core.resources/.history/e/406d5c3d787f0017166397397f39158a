import {Component, OnInit} from '@angular/core';

@Component({
  selector: 'app-list',
  template: `<h1>Input and output</h1>
<label>Enter the list component value</label>
<input type="text">
<p>Value from parent Component is {{parentData}}</p>`,
  styleUrls: ['./list.component.css'],
  inputs: [`parentsData`]
})

export class ListComponent {
  public title = 'Tutorials for Shruti';
  public imgLink = 'http://lorempixel.com/400/200';
  public applyClass = true;
  public applyBlue = false;
  public fname: string;
  public showElement = true;
  public lname;
  public color= 'green';
  public colors= ['red', 'green', 'blue'];
  public cone= true;
  public ctwo= true;
  public style= 'italic';
  public size= '30px';
  public parentsData: string;


  onClick(value) {
    console.log('Click button' + value);
  }

  toggle() {
    this.cone = !this.cone;
    this.ctwo = !this.ctwo;
  }
}
